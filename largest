#include <stdio.h>

float largest(float a,float b, float c)
{
   float l;
   if(a>b&&a>c)
   {
        l=a;
   }
   else if(b>a&&b>c)
   {
        l=b;
   }
   else if(c>a&&c>b)
   {
        l=c;
   }
   return l;
}
int main()
{
    float x,y,z;
    printf("Enter 3 numbers:");
    scanf("%f%f%f",&x,&y,&z);
    int l=largest(x,y,z);
    printf("Largest number=%d",l;);
    return 0;
}



