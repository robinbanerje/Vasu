#include <stdio.h>

int evenodd(int n)
{
    int t;
    if(n%2==0)
    t=0;
    else
    t=1;
    return t;
    
}
int input()
{
    int n;
    printf("Enter a number:");
    scanf("%d",&n);
    return n;
}

void main()
{
    int n=input();
    
    for(int i=0;i<=n;i++)
    {
        int t=evenodd(i);
        if(t==0)
        printf("%d is an even number.\n",i);
        else
        printf("%d is an odd number.\n",i);
    }
}
