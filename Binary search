#include<stdio.h>

/*struct binary
{
    int a[100];
    int n;
    int s;
    int p;
}b;*/
void input(int a[100],int n)
{
    
    printf("Enter elements of array:");
    for(int i=0;i<n;i++)
    {
        scanf("%d",&a[i]);
    }
    
}

int search(int a[100],int n,int s)
{
    int mid,lb=0,ub=(n-1);
    int p=-1;
    while(lb<ub&&p==-1)
    {
        mid=(lb+ub)/2;
        if(a[mid]==s)
        {
        p=mid;
        }
        else if(a[mid]>s)
        {
        ub=mid-1;
        }
        else
        {
        lb=mid+1;
        }
    }
    return p;
}

void output(int p,int s)
{
    if(p==-1)
    printf("Given element is not found in the array.");
    else
    printf("%d is found in the position:%d",s,p);
}

void main()
{
    int a[100];
    int n,s,p;
    printf("Enter limit:");
    scanf("%d",&n);
    input(a,n);
    printf("Enter search element:");
    scanf("%d",&s);
    p=search(a,n,s);
    output(p,s);
}
